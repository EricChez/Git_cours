{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1 class="text-center my-5">{{ blog.title }}</h1>

    <div class="container">
        <div class="row">
            <div class="col">
                <p class="text-center">{{ blog.content }}</p>
                <p class="ml-4">Billet de blog publié par <span><i>{{ blog.user.email }}</i></span> le {{ blog.createAt ? blog.createAt|date('d-m-Y H:i') : '' }}</p>
                {% if blog.modifyAt != null %}
                <p class="ml-4">Dernière modification le <span><i>{{ blog.modifyAt ? blog.modifyAt|date('d-m-Y H:i') : '' }}</i></span></p>
                {% endif %}

                <div class="text-center">
                    <a href="{{ path('app_blog_index') }}">Retour à l'index</a>
                </div>
            </div>
        </div>
    </div>

